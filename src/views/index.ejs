<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/styles.css">
  <title>Ace Shortener</title>
</head>
<body>
  <header class='header'>
    <h1 class="logo">Ace Shortner</h1>
    <p>Yet Another Link Shortener</p>
  </header>
  <div class="container">
    <form>
      <fieldset>
        <input type="url" class="originalUrl" placeholder="Enter Url ...">
        <input type="text" class="shorten" placeholder="New Url Name">
      </fieldset>
      <button>Submit</button>
    </form>
    <div class="url-container">
      <% urls.forEach(url => { %>
        <div class="url-card">
          <div class="url-content">
            <p class="originalUrlText"><%= url.originalUrl %></p>
            <p class="shortenUrlText"><a href="<%= url.shorten %>" class="url-link"><%= `http://localhost/${url.shorten}` %></a></p>
          </div>
          <div class="copy">
            <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path><rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect></svg>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <script src="scripts/index.js"></script>
</body>
</html>